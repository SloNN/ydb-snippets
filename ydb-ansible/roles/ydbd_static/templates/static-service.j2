[Unit]
Description=YDB storage node
After=network-online.target rc-local.service
Wants=network-online.target
StartLimitInterval=10
StartLimitBurst=15

[Service]
Restart=always
RestartSec=1
User=ydb
PermissionsStartOnly=true
SyslogIdentifier=ydbd
SyslogFacility=daemon
SyslogLevel=err
Environment=LD_LIBRARY_PATH={{ ydbd_dir }}/lib
ExecStart={{ ydbd_dir }}/bin/ydbd server --log-level 3 --syslog --tcp --yaml-config  {{ ydbd_dir }}/cfg/ydbd-static.yaml \
    --grpcs-port 2135 --ic-port 19001 --mon-port 8765 --mon-cert {{ ydbd_dir }}/certs/web.pem --node static
LimitNOFILE=65536
LimitCORE=0
#LimitCORE=infinity
LimitMEMLOCK=3221225472

[Install]
WantedBy=multi-user.target
